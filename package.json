{
  "name": "comet-highlighter",
  "license": "MIT",
  "displayName": "Comet Highlighter",
  "description": "This is the highlighter of comet(datapack compiler) by 40planet",
  "version": "1.0.11",
  "publisher": "alexmonkey05",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexmonkey05/comet-highlighter"
  },
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "planet",
        "aliases": [
          "Planet",
          "planet"
        ],
        "extensions": [
          ".planet"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "planet",
        "scopeName": "source.planet",
        "path": "./syntaxes/comet.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "comet.compile",
        "title": "Comet: Compile current workspace"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -p ./ -w",
    "build": "npm run compile",
    "vscode:prepublish": "npm run build",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/vscode": "^1.104.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.6.3",
    "vscode": "^1.1.37"
  },
  "activationEvents": [
    "onLanguage:planet",
    "onCommand:comet.compile"
  ]

}
