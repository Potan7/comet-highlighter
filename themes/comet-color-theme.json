{
    "name": "Comet Theme",
    "type": "dark",
    "colors": {
        "editor.foreground": "#F8F8F8",
        "editor.background": "#1E1E1E",
        "editor.selectionBackground": "#264F78",
        "editor.lineHighlightBackground": "#333842",
        "editorCursor.foreground": "#FFFFFF",
        "editorWhitespace.foreground": "#3B3A32",
        "editor.selectionHighlightBorder": "#ADD6FF"
    },
    "tokenColors": [
        {
            "scope": "keyword.control.comet",
            "settings": {
                "foreground": "#C579B6"
            }
        },
        {
            "scope": "define.comet",
            "settings": {
                "foreground": "#569CD6"
            }
        },
        {
            "scope": "string.quoted.double.comet",
            "settings": {
                "foreground": "#CE9178"
            }
        },
        {
            "scope": "constant.numeric.comet",
            "settings": {
                "foreground": "#B5CEA8"
            }
        },
        {
            "scope": "comment.line.double-slash.comet",
            "settings": {
                "foreground": "#6A9955"
            }
        },
        {
            "scope": "comment.line.number-sign.comet",
            "settings": {
                "foreground": "#6A9955"
            }
        },
        {
            "scope": "comment.block.comet",
            "settings": {
                "foreground": "#6A9955"
            }
        },
        {
            "scope": "keyword.operator.comet",
            "settings": {
                "foreground": "#D4D4D4"
            }
        },
        {
            "scope": "punctuation.definition.comet",
            "settings": {
                "foreground": "#D4D4D4"
            }
        },
        {
            "scope": "entity.name.function.comet",
            "settings": {
                "foreground": "#DCCD79"  // Gold color for functions
            }
        },
        {
            "scope": "command.comet",
            "settings": {
                "foreground": "#569CD6"  // Custom blue color for commands
            }
        },
        {
            "scope": "variable.other.comet",
            "settings": {
                "foreground": "#9CDCFE"  // Light blue color for variables
            }
        }
    ]
}
